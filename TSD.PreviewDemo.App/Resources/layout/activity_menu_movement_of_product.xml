<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="5dp"
    android:background="#FFF">
    <TextView
        android:id="@+id/activity_menu_movement_of_product_tv_address_string"
        style="@style/StyleOfAddressString"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/activity_menu_movement_of_product_tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/activity_menu_movement_of_product_tv_header"
        android:textColor="#000"
        android:textFontWeight="500"
        android:textSize="20dp"
        app:fontFamily="Roboto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_menu_movement_of_product_tv_address_string" />
    <Button
        android:id="@+id/activity_menu_movement_of_product_btn_acceptance"
        style="@style/MainMenu.MenuButton"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:text="@string/activity_menu_movement_of_product_btn_acceptance"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_menu_movement_of_product_tv_header" />
    <Button
        android:id="@+id/activity_menu_movement_of_product_btn_returns"
        style="@style/MainMenu.MenuButton"
        android:layout_width="match_parent"
        android:text="Комплектация возвратов"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_menu_movement_of_product_btn_acceptance" />
    <Button
        android:id="@+id/activity_menu_movement_of_product_btn_cargo"
        style="@style/MainMenu.MenuButton"
        android:layout_width="match_parent"
        android:text="Комплектация грузомест"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_menu_movement_of_product_btn_returns" />
    <Button
        android:id="@+id/activity_menu_movement_of_product_btn_materials"
        style="@style/MainMenu.MenuButton"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:text="@string/activity_menu_movement_of_product_btn_sales_materials"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_menu_movement_of_product_btn_cargo" />
    <Button
      style="@style/MyButtonInvisibleCancel"
      android:id="@+id/activity_menu_movement_of_product_btn_cancel"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/activity_menu_movement_of_product_lottie_animation_view"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_gravity="center"
        app:lottie_rawRes="@raw/load_spinner_red"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/activity_menu_movement_of_product_tv_header"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>