<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="5dp"
    android:background="#FFF">
    <TextView
        android:id="@+id/activity_main_menu_tv_address_string"
        style="@style/StyleOfAddressString"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/activity_main_menu_tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/main_menu_text"
        android:textColor="#000"
        android:textFontWeight="500"
        android:textSize="20dp"
        app:fontFamily="Roboto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main_menu_tv_address_string" />
    <Button
        android:id="@+id/activity_main_menu_btn_inventory"
        style="@style/MainMenu.MenuButton"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:text="@string/inventorization_menu_text"
        android:focusable="false"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_menu_tv_header" />
    <Button
        style="@style/MainMenu.MenuButton"
        android:id="@+id/activity_main_menu_btn_move_goods"
        android:layout_width="match_parent"
        android:focusable="false"
        android:text="@string/items_moving_menu_text"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_menu_btn_inventory"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        style="@style/MainMenu.MenuButton"
        android:id="@+id/activity_main_menu_btn_my_tasks"
        android:layout_width="match_parent"
        android:focusable="false"
        android:enabled="false"
        android:text="@string/my_tasks_menu_text"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_menu_btn_move_goods"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        style="@style/MainMenu.MenuButton"
        android:id="@+id/activity_main_menu_btn_work_in_saleroom"
        android:layout_width="match_parent"
        android:focusable="false"
        android:enabled="false"
        android:text="@string/work_in_shopping_room_menu_text"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_menu_btn_my_tasks"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        style="@style/MainMenu.MenuButton"
        android:id="@+id/activity_main_menu_btn_production"
        android:layout_width="match_parent"
        android:focusable="false"
        android:enabled="false"
        android:text="@string/manufacture_menu_text"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_menu_btn_work_in_saleroom"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        style="@style/MainMenu.MenuButton"
        android:id="@+id/activity_main_menu_btn_change_storage"
        android:layout_width="match_parent"
        android:focusable="false"
        android:enabled="false"
        android:text="Смена склада"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_menu_btn_production"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        style="@style/MyButtonInvisibleCancel"
        android:id="@+id/activity_main_menu_btn_cancel"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/activity_main_menu_lottie_animation_view"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_gravity="center"
        app:lottie_rawRes="@raw/load_spinner_red"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/activity_main_menu_tv_header"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>