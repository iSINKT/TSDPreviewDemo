<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34463F">
  <eightbitlab.com.blurview.BlurView
        android:id="@+id/activity_update_main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
    <TextView
            android:id="@+id/activity_update_check_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="100dp"
            android:text="Проверка обновлнеия"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="20dp"
            app:fontFamily="Roboto"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/activity_update_lottie_animation_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/load_spinner_white"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="invisible"
            app:layout_constraintRight_toRightOf="parent"/>
  </eightbitlab.com.blurview.BlurView>
  <LinearLayout
        android:id="@+id/activity_update_failed_buttons"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/activity_update_button_repeat"
            android:text="Повторить"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            style="@style/MyButtonMainWhite"/>
        <Button
            android:id="@+id/activity_update_button_continue_without_update"
            android:text="Продолжить без обновления"
            app:fontFamily="Roboto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MyButtonMainWhite"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>