<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="5dp">
    <TextView
        android:id="@+id/activity_store_acceptance_scan_product_tv_address_string"
        style="@style/StyleOfAddressString"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_store_acceptance_scan_product_tv_header" />
    <TextView
        android:id="@+id/activity_store_acceptance_scan_product_tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/activity_store_acceptance_scan_product_tv_header"
        android:textColor="#000"
        android:textFontWeight="500"
        android:textSize="20dp"
        app:fontFamily="Roboto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <LinearLayout
        android:id="@+id/activity_store_acceptance_scan_product_ll_filter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_store_acceptance_scan_product_tv_header">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="110">
            <TextView
                android:id="@+id/activity_store_acceptance_scan_product_tv_barcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_store_acceptance_scan_product_tv_barcode"
                style="@style/SmallHeaderStyle" />
            <TSD.PreviewDemo.App.Utilities.CustomEditText
                android:id="@+id/activity_store_acceptance_scan_product_et_barcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:singleLine="true"           
                android:inputType="number"
                style="@style/EditTextMyStyleBlackBorder"
                app:layout_constraintTop_toBottomOf="@+id/activity_store_acceptance_scan_product_tv_barcode" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="100" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout_tv_name_of_product"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout_spinner_group"
        app:layout_constraintTop_toBottomOf="@+id/activity_store_acceptance_scan_product_ll_filter_name">
        <TextView
            android:id="@+id/activity_store_acceptance_scan_product_tv_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_of_item_subtitle_text"
            style="@style/SmallHeaderStyle" />
        <TextView
            android:id="@+id/activity_store_acceptance_scan_product_tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout_tv_count_of_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:divider="@drawable/empty_tall_divider"
        android:showDividers="middle"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout_tv_count_of_product_per">
      <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/activity_store_acceptance_scan_product_tv_boxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_store_acceptance_scan_product_tv_boxes"
                style="@style/SmallHeaderStyle" />
            <TSD.PreviewDemo.App.Utilities.CustomEditText
                android:id="@+id/activity_store_acceptance_scan_product_et_boxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="number"
                android:text="0"
                style="@style/EditTextMyStyleBlackBorder"/>
        </LinearLayout>
      <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:divider="@drawable/empty_tall_divider"
            android:showDividers="middle"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/activity_store_acceptance_scan_product_btn_inverse_up"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Additional.Button"
                android:text="+/-"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout_tv_count_of_product_per"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:divider="@drawable/empty_tall_divider"
        android:showDividers="middle"
        app:layout_constraintBottom_toTopOf="@+id/activity_store_acceptance_scan_product_ll_counter_up">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/activity_store_acceptance_scan_product_tv_item_per_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_store_acceptance_scan_product_tv_item_per_box"
                style="@style/SmallHeaderStyle" />
            <TSD.PreviewDemo.App.Utilities.CustomEditText
                android:id="@+id/activity_store_acceptance_scan_product_et_item_per_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:singleLine="true"
                style="@style/EditTextMyStyleBlackBorder"
                app:layout_constraintTop_toBottomOf="@+id/activity_store_acceptance_scan_product_tv_item_per_box" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_store_acceptance_scan_product_btn_dot"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent"
            style="@style/Additional.Button"
            android:text=","
            android:textSize="20dp" />
      <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_store_acceptance_scan_product_btn_inverse"
            android:layout_weight="1.5"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Additional.Button"
            android:text="+/-"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_store_acceptance_scan_product_ll_counter_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/activity_store_acceptance_scan_product_ll_additional_buttons">
      <LinearLayout
            android:id="@+id/activity_store_acceptance_scan_product_ll_counter_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/empty_tall_divider"
            android:showDividers="middle"
            android:orientation="horizontal">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/activity_store_acceptance_scan_product_tv_all_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_store_acceptance_scan_product_tv_all_qty"
                    style="@style/SmallHeaderStyle" />
                <TSD.PreviewDemo.App.Utilities.CustomEditText
                    android:id="@+id/activity_store_acceptance_scan_product_et_all_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:singleLine="true"
                   android:inputType="number"                 
                    style="@style/EditTextMyStyleBlackBorder"
                    app:layout_constraintTop_toBottomOf="@+id/activity_store_acceptance_scan_product_tv_all_qty" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/activity_store_acceptance_scan_product_tv_fact_scanned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_store_acceptance_scan_product_tv_fact_scanned"
                    style="@style/SmallHeaderStyle" />
                <TSD.PreviewDemo.App.Utilities.CustomEditText
                    android:id="@+id/activity_store_acceptance_scan_product_et_fact_scanned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:singleLine="true"
                    android:inputType="number"                
                    style="@style/EditTextMyStyleBlackBorder"
                    app:layout_constraintTop_toBottomOf="@+id/activity_store_acceptance_scan_product_tv_fact_scanned" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
      <LinearLayout
            android:id="@+id/activity_store_acceptance_scan_product_ll_counter_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/activity_store_acceptance_scan_product_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_store_acceptance_scan_product_tv_date"
                    style="@style/SmallHeaderStyle" />
                <TSD.PreviewDemo.App.Utilities.CustomEditText
                    android:id="@+id/activity_store_acceptance_scan_product_et_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"            
                    android:selectAllOnFocus="true"
                    android:inputType="number"
                style="@style/EditTextMyStyleBlackBorder"
                    app:layout_constraintTop_toBottomOf="@+id/activity_store_acceptance_scan_product_tv_date" />
            </androidx.constraintlayout.widget.ConstraintLayout>
          <LinearLayout
                android:id="@+id/activity_store_acceptance_scan_product_ll_checkboxes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <CheckBox
                    android:id="@+id/activity_store_acceptance_scan_product_cb_accept"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="@string/activity_store_acceptance_scan_product_cb_accept"
                    android:textSize="13dp"
                    android:layout_weight="1" />
                <CheckBox
                    android:id="@+id/activity_store_acceptance_scan_product_cb_refuse"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="@string/activity_store_acceptance_scan_product_cb_refuse"
                    android:textSize="13dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_store_acceptance_scan_product_ll_additional_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:divider="@drawable/empty_tall_divider"
        android:showDividers="middle"
        app:layout_constraintBottom_toTopOf="@+id/activity_store_acceptance_scan_product_btn_close"
        android:layout_marginBottom="5dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_store_acceptance_scan_product_btn_find"
            style="@style/Additional.Button"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/activity_store_acceptance_scan_product_btn_find" />
        <Button
            android:id="@+id/activity_store_acceptance_scan_product_btn_input"
            style="@style/MyButtonRed"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/activity_store_acceptance_scan_product_btn_input" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_store_acceptance_scan_product_btn_close"
            style="@style/Additional.Button"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/activity_store_acceptance_scan_product_btn_close" 
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/activity_store_acceptance_scan_product_btn_cancel"
        style="@style/MyButtonInvisibleCancel"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/activity_store_acceptance_scan_product_lottie_animation_view"
        android:layout_width="27dp"
        android:layout_height="27dp"
        app:lottie_rawRes="@raw/load_spinner_red"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/activity_store_acceptance_scan_product_tv_header"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>