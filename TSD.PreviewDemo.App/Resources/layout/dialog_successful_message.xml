<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_height="wrap_content"
  android:layout_width="270dp"
android:orientation="vertical"
  android:layout_gravity="center"
  android:background="#FFF5F5F5">
  <LinearLayout
    android:id="@+id/dialog_simple_successful_ll_main_info"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="22dp"
    android:layout_gravity="center"
    android:background="#FFF5F5F5"
   >
    <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="30dp">
      <ImageView
        android:id="@+id/red_check_mark"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_green_check_mark_message" />
      <TextView
        android:id="@+id/dialog_simple_successful_tv_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="9dp"
        android:textSize="18sp"
        style="@style/HeaderStyle"
        android:text="@string/dialog_successful_tv_title" />
    </LinearLayout>
    <TextView
      android:id="@+id/dialog_simple_successful_tv_message"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_marginTop="5dp"
      android:textColor="#000"
      android:textSize="18sp"
      android:text="@string/dialog_tv_message" />
  </LinearLayout>

    <Button
        android:id="@+id/dialog_simple_successful_btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#000"
        style="@style/DialogButton"
        android:text="@string/ok_button_text"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_simple_successful_ll_main_info"
        app:layout_constraintRight_toRightOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
