<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="270dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#FFF5F5F5">
    <LinearLayout
        android:id="@+id/dialog_yes_no_simple_dialog_ll_main_info"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="22dp"
        android:layout_gravity="center"
        android:background="#FFF5F5F5"
   >
        <TextView
            android:id="@+id/dialog_yes_no_simple_dialog_tv_message"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:text="@string/dialog_tv_message" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/dialog_yes_no_simple_dialog_ll_main_info"
        app:layout_constraintRight_toRightOf="parent">
        <Button
            android:id="@+id/dialog_yes_no_simple_dialog_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            style="@style/DialogButton"
            android:text="@string/cancel_button_text"
            android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/dialog_yes_no_simple_dialog_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            style="@style/DialogButton"
            android:text="@string/ok_button_text"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
