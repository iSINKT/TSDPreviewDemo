<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
        android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#FFF5F5F5">

    <LinearLayout
        android:id="@+id/layout"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        >
      <ImageView
        android:id="@+id/red_check_mark"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_red_cross_message" />
      <TextView
        android:id="@+id/dialog_error_message_tv_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="9dp"
        android:textSize="18sp"
        style="@style/HeaderStyle"
        android:text="@string/dialog_error_tv_title" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/scroll_view"
        android:orientation="vertical"
        app:layout_constraintHeight_max="400dp"
        app:layout_constraintTop_toBottomOf="@+id/layout">
        <LinearLayout
            android:id="@+id/dialog_error_message_ll_main_info"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:background="#FFF5F5F5">

            <TextView
                android:id="@+id/dialog_error_message_tv_message"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:textSize="18sp"
                android:maxLength="700"
                android:text="@string/dialog_tv_message" />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/dialog_error_message_btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        style="@style/DialogButton"
        android:text="@string/ok_button_text"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
