<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="5dp">
    <TextView
        android:id="@+id/activity_select_storage_tv_address_string"
        style="@style/StyleOfAddressString"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/activity_select_storage_tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Сменить склад"
        style="@style/HeaderStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_select_storage_tv_address_string" />
    <Spinner
            android:id="@+id/storage_spinner"
            android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_select_storage_tv_header"
            android:layout_height="50dp"
        android:layout_marginTop="10dp"
            android:spinnerMode="dialog"
            style="@style/CustomSpinnerBlackStyle"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_select_storage_btn_create"
        style="@style/Additional.Button"
        android:layout_width="match_parent"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Ok"/>
    <Button
        android:id="@+id/activity_select_storage_btn_cancel"
        style="@style/MyButtonInvisibleCancel"
        android:visibility="gone"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/activity_select_storage_lottie_animation_view"
        android:layout_width="27dp"
        android:layout_height="27dp"
        app:lottie_rawRes="@raw/load_spinner_red"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/activity_select_storage_tv_header"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>