<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="5dp">
  <TextView
        android:id="@+id/activity_store_acceptance_new_tasks_tv_address_string"
        style="@style/StyleOfAddressString"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
  <TextView
        android:id="@+id/activity_store_acceptance_new_tasks_tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_store_acceptance_new_tasks_tv_header"
        android:textColor="#000"
        android:textFontWeight="500"
        android:textSize="20dp"
        app:fontFamily="Roboto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_store_acceptance_new_tasks_tv_address_string" />
  <TextView
        android:id="@+id/activity_scan_item_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="#000"
        android:textFontWeight="300"
        android:textSize="17dp"
        app:fontFamily="Roboto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_store_acceptance_new_tasks_tv_header" />
  <LinearLayout
        android:id="@+id/activity_store_acceptance_new_tasks_ll_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:divider="@drawable/empty_tall_divider"
        android:showDividers="middle"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_scan_item_tv_date">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            app:layout_constraintTop_toBottomOf="@+id/activity_store_acceptance_new_tasks_tv_header">
            <TextView
                android:id="@+id/activity_store_acceptance_new_tasks_tv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_store_acceptance_new_tasks_tv_number"
                android:textSize="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TSD.PreviewDemo.App.Utilities.CustomEditText
                android:id="@+id/activity_store_acceptance_new_tasks_et_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:singleLine="true"
                style="@style/EditTextMyStyleBlackBorder"
                android:inputType=""
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_store_acceptance_new_tasks_tv_number" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            app:layout_constraintLeft_toRightOf="@+id/activity_store_acceptance_new_tasks_tv_number"
            app:layout_constraintTop_toTopOf="@+id/activity_store_acceptance_new_tasks_tv_number">
      <TextView
                android:id="@+id/activity_store_acceptance_new_tasks_tv_cargo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_store_acceptance_new_tasks_tv_cargo"
                android:textSize="12dp"               
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
      <TSD.PreviewDemo.App.Utilities.CustomEditText
                android:id="@+id/activity_store_acceptance_new_tasks_et_cargo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                style="@style/EditTextMyStyleBlackBorder"
                android:singleLine="true"
                android:inputType="textNoSuggestions | text"
                app:layout_constraintLeft_toLeftOf="@id/activity_store_acceptance_new_tasks_tv_cargo"
                app:layout_constraintTop_toBottomOf="@id/activity_store_acceptance_new_tasks_tv_cargo"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
  <LinearLayout
        android:id="@+id/activity_store_acceptance_new_tasks_ll_cardview_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:divider="@drawable/empty_tall_divider"
        android:showDividers="middle"
        app:layout_constraintTop_toBottomOf="@+id/activity_store_acceptance_new_tasks_ll_et"
        android:orientation="horizontal">
    <TextView
            android:id="@+id/activity_store_acceptance_new_tasks_tv_small_header_first_column"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_store_acceptance_new_tasks_tv_small_header_first_column"
            android:layout_weight="5"
            android:textSize="12dp"/>
    <TextView
            android:id="@+id/activity_store_acceptance_new_tasks_tv_small_header_second_column"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:text="@string/activity_store_acceptance_new_tasks_tv_small_header_second_column"
            android:textSize="12dp"/>
    </LinearLayout>
  <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="5dp"
        android:id="@+id/scroll_view"
        app:layout_constraintTop_toBottomOf="@+id/activity_store_acceptance_new_tasks_ll_cardview_header"
        app:layout_constraintBottom_toTopOf="@+id/activity_store_acceptance_new_tasks_btn_refresh"
        tools:layout_editor_absoluteX="10dp"
        android:orientation="vertical">
    <LinearLayout
            android:id="@+id/activity_store_acceptance_new_tasks_scroll_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
  <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_store_acceptance_new_tasks_btn_refresh"
        style="@style/Additional.Button"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:text="@string/activity_store_acceptance_new_tasks_btn_refresh"
        app:layout_constraintBottom_toBottomOf="parent"/>
  <Button
        android:id="@+id/activity_store_acceptance_new_tasks_btn_cancel"
        style="@style/MyButtonInvisibleCancel"  
        android:visibility="gone"/>
  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/activity_store_acceptance_return_confirmation_lottie_animation_view"
      android:layout_width="27dp"
      android:layout_height="27dp"
      app:lottie_rawRes="@raw/load_spinner_red"
      app:lottie_autoPlay="false"
      app:lottie_loop="true"
      android:visibility="invisible"
      app:layout_constraintTop_toTopOf="@id/activity_store_acceptance_new_tasks_tv_header"
      app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>